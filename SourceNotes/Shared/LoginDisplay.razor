@inherits LayoutComponentBase

<AuthorizeView>
    <Authorized>
        <ul>
            <li><a href="Identity/Account/Manage">Account</a></li>
            <li>
                <form method="post" action="Identity/Account/Logout">
                    <button type="submit">Log out</button>
                </form>
            </li>
        </ul>
    </Authorized>
    <NotAuthorized>
        <ul>
            <li><a href="Identity/Account/Register">Request Account</a></li>
            <li><a href="Identity/Account/Login">Log in</a></li>
        </ul>
    </NotAuthorized>
</AuthorizeView>

<style>
    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #1E2034;
    }

    li {
        float: left;
    }

        li a {
            font-size: 0.9rem;
            display: block;
            border-radius: 4px;
            display: flex;
            color: #d7d7d7;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

            li a:hover {
                background-color: rgba(255,255,255,0.1);
                color: white;
            }

    .active {
        background-color: rgba(255,255,255,0.25);
        color: white;
    }

    form button {
        font-size: 0.9rem;
        display: block;
        border-radius: 4px;
        color: #d7d7d7;
        text-align: center;
        padding: 14px 16px;
        background-color: transparent;
        border: none;
        margin-left: 1.5rem;
    }

    form button:hover {
        background-color: rgba(255,255,255,0.1);
        color: white;
    }
</style>
